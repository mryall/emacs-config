; -*- mode: Emacs-Lisp;-*-

(require 'git-commit-mode)

(add-hook 'git-commit-mode-hook 'turn-on-flyspell)

(add-hook 'git-commit-mode-hook (lambda () (progn
                                     (turn-on-auto-fill)
                                     (setq fill-column 72))))

(add-hook 'git-commit-mode-hook 'color-theme-arjen)
(add-hook 'git-commit-commit-hook 'color-theme-solarized-dark)

(require 'color-theme-buffer-local)
(add-hook 'git-commit-mode-hook
          (lambda () (let ((color-theme-is-global nil))
                  (color-theme-arjen)))) 

;;(setq git-commit-mode-hook nil)
;;(setq server-visit-hook nil)
